	<boosterZipper path="objects/ChroniaHelper/boosterZipper/" start="loop">
		<Justify x="0.5" y="0.5"/>
		<Loop id="loop" path="idle" delay="0.1" />
		<Anim id="inside" path="idle_player" frames ="0" delay="0.1" goto="inside_loop"/>
		<Loop id="inside_loop" path="idle_player" delay="0.1" />
		<Loop id="spin" path="idle_player" delay="0.06" />
		<Anim id="pop" path="bursts" delay="0.08" />

		<Anim id="toEndloop" path="change" delay="0.1" goto="loop_end"/>
		<Anim id="toEndinside" path="change_player" delay="0.1" goto="inside_end"/>
		<Anim id="toEndinsideLoop" path="change_player" delay="0.1" goto="inside_loop_end"/>
		<Anim id="fromEndinsideLoop" path="changeBack_player" delay="0.1" goto="inside_loop"/>
		<Anim id="fromEndLoop" path="changeBack" delay="0.1" goto="loop"/>
		<Anim id="fromEndinside" path="changeBack_player" delay="0.1" goto="inside"/>

		<Loop id="loop_end" path="o_idle" delay="0.1" />
		<Anim id="inside_end" path="o_idle_player" frames="0" delay="0.1" goto="inside_loop_end"/>
		<Loop id="inside_loop_end" path="o_idle_player" delay="0.1" />
		<Loop id="spin_end" path="o_idle_player" delay="0.06" />
		<Anim id="pop_end" path="o_bursts" delay="0.08" />
	</boosterZipper>

